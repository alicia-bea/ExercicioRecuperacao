package mapList;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.Scanner;

public class Opcoes {
	
	 private List<String> Aluno = new ArrayList<>();
	   private List<String> Professor  = new ArrayList<>();
	   private Map<String, List<Turma>> turmas = new HashMap<>();
	
	  public static void main(String[] args) {
		 int opcao = new Opcoes();
		        Scanner scanner = new Scanner(System.in);
		        int opcoes;
		        do {
		        	
		            System.out.println("Escolha uma das opções apresentadas:");
		            System.out.println("1. Nome do aluno");
		            
		            System.out.println("2. Nome do professor");
		            
		            System.out.println("3. Apresentar relatório da escola");
		            
		            System.out.println("4. Número de alunos");
		            
		            System.out.println("5. Gravação de dados");
		            
		            System.out.println("6. Recuperação de dados");
		            
		            System.out.println("0. Sair");
		            opcoes = scanner.nextInt();

		            switch (opcoes) {
		                case 1:
		                	opcoes.NomeDoAluno(scanner);
		                    break;
		                    
		                case 2:
		                	opcoes.NomeDoProfessor(scanner);
		                    break;
		                    
		                case 3:
		                	opcoes.realizarCompra(scanner);
		                    break;
		                    
		                case 4:
		                	opcoes.mostrarRelatorioCompra(scanner);
		                    break;
		                    
		                case 5:
		                	opcoes.gravarDadosEmArquivo("InformacoesEscola.txt");
		                    break;
		                    
		                case 6:
		                	opcoes.recuperarDadosDeArquivo("InformacoesEscola.txt");
		                    break;
		                   }
		           } 
		        while (opcao != 0);
		    }
		  }

}





